- breadcrumb_for_application @application, I18n.t(:Confirm_delete) + ' ' + @application.name

%h1= I18n.t(:Delete_Application) + ' ' + @application.name

= semantic_form_for @application, :html => {:method => :delete, :class => 'form'} do |f|
  %p= I18n.t(:delete_app_ask) + @application.name + '?'

  %p= I18n.t(:delete_app_caption)

  = f.semantic_errors
  = f.buttons do
    = link_to I18n.t(:Cancel), @referer || application_path(@application), :class => 'btn'
    = f.commit_button :label => I18n.t(:Delete), :button_html => {:class => 'btn btn-danger'}
    = f.loading
