= content_for :title, I18n.t(:reset_password_title)

%div.content
  %header.getup
    .wrap
      %h1.getup-sprite.logo Getup
      %h2.app Openshift Console

  %section
    %div.signin{ :id => 'reset' }
      %h2= I18n.t(:reset_password_caption)
      %form{:action => update_path, :id => 'form-reset', :method => 'post'}
        %fieldset
          = token_tag(nil)
          = password_field_tag 'password', '', :placeholder => I18n.t(:new_password), :required => ''
          = password_field_tag 'verify-password', '', :placeholder => I18n.t(:new_password_again), :required => ''

          %button.getup-sprite= I18n.t(:Save)

    = flashes

= javascript_include_tag 'auth_reset'
