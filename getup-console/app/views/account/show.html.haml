= content_for :page_title, I18n.t(:My_Account)
%h1= I18n.t(:My_Account)
= flashes

.row
  .span7
    %section
      = render :partial => 'gears', :locals => {:capabilities => @capabilities, :payment=> @payment}

    %secion
      = render :partial => 'validate', :locals => {:capabilities => @capabilities, :payment=> @payment}
    - if @plan[:free_tier].to_i or @plan[:bonus].to_i or @plan[:voucher].to_f
      %secion
        = render :partial => 'credits', :locals => {:plan=> @plan, :getup_credit_url => getup_credit_url}

  .span5
    %section
      = render :partial => 'billing'
