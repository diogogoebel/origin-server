= breadcrumb_for_application @application, I18n.t(:Delete_Alias)

%h1= I18n.t(:Delete_Alias)
=flashes

= semantic_form_for @application, :url => application_aliases_path(@application), :html => {:method => :delete, :class => 'form'} do |f|

  %p= I18n.t(:alias_delete_caption_2)

  %p
    = I18n.t(:alias_delete_ask)
    = @alias.name
    ?

  %div.select.optional.control-group
    .controls
      = select_tag(:alias, options_for_select(@application.aliases, @alias))

  = f.semantic_errors
  = f.buttons do
    = link_to I18n,t(:Cancel), @referer || application_path(@application), :class => 'btn'
    = f.commit_button :label => I18n.t(:Delete_Alias), :button_html => {:class => 'btn btn-danger'}
    = f.loading
