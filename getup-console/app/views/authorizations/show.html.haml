- content_for :title, I18n.t(:Authorization)

%h1= I18n.t(:authz_title)
= flashes

= semantic_form_for @authorization, :html => {:class => 'form'} do |f|
  = f.semantic_errors
  = f.inputs do

    %section
      %pre.larger{:style => 'word-break: break-all;'}= @authorization.token

      %p= I18n.t(:authz_caption)
      %table.table
        %thead
          %tr
            %th{:scope => 'col'}= I18n.t(:Scope)
            %th{:scope => 'col'}= I18n.t(:Description)
        %tbody
          - @authorization.scopes.each do |s|
            - if scope = @scope_definitions.find{ |scope| scope[:match] ? s.match(scope[:match]) : scope[:id].to_s == s.to_s }
              %tr
                %td{:scope => 'row'}= I18n.t(scope[:id])
                %td= scope[:description]

      %p
        = @authorization.note || "<" + I18n.t(:no_description) + ">"
        = link_to I18n.t(:Edit), edit_authorization_path(@authorization), :class => 'btn btn-mini'
      %p
        = I18n.t(:token_created_at, time: @authorization.created_at.to_s(:pretty_time), expires: distance_of_time_in_words(@authorization.expires_at, Time.now))
        = link_to I18n.t(:Delete), authorization_path(@authorization), :title => I18n.t(:token_revoke), :class => 'btn btn-danger btn-mini', :method => :delete, :confirm => I18n.t(:token_revoke_confirm)

%section
  = render :partial => 'usage', :locals => {:authorization => @authorization}
