%h2= t('.title')

%p= t('.caption')

%table.table.credits
  %tbody
    - if plan[:free_tier].to_i > 0
      %tr
        %td Free Tier:
        %td #{plan[:free_tier].to_i} #{t('.hours')}/gear small

    - if plan[:credit].to_f > 0
      %tr
        %td= t('.credit')
        %td #{number_with_precision(plan[:credit].to_f, :precision => 2)} #{t('.hours')}/gear small

    - if plan[:bonus].to_f > 0
      %tr
        %td Bonus:
        %td #{number_with_precision(plan[:bonus].to_f, :precision => 2)} #{t('.hours')}/gear small

    - if plan[:voucher].to_f > 0
      %tr
        %td Voucher:
        %td R$ #{number_with_precision(plan[:voucher].to_f, :precision => 2)}

    %tr
      %td.right{:colspan => 2}
        %a{:href=>getup_credit_url, :target=>'_blank'}= t('.undestand')
