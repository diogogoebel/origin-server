.navbar.utility
  .navbar-inner
    .container
      = link_to root_path, :class => 'brand' do
        = product_branding
      - unless Console.config.disable_account
        %ul.nav.pull-right
          %li.dropdown.hidden-phone
            = link_to account_path, :class => "dropdown-toggle username", "data-target" => "#", "data-toggle" => "dropdown" do
              %span.icon-user.icon-white
              = current_user_id
              %b.caret
            %ul.dropdown-menu
              %li= link_to _("My Account"), account_path
              - unless logout_path.nil?
                %li.divider
                %li= link_to _("Sign Out"), logout_path, :class => "sign_out"
      %a.btn.btn-navbar{'data-target' => '.nav-collapse', 'data-toggle' => 'collapse'}
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
.navbar.primary
  .navbar-inner
    .container
      .nav-collapse.collapse
        = navigation_tabs do

          = navigation_tab :applications, :name => _("Applications")
          = navigation_tab :settings, :action => :show, :name => _("Settings")
          = navigation_tab :account, :action => :show, :name => _("My Account")
          = navigation_tab :console_index, :action => :help, :name => _("Help"), :target => '_blank'

          - unless Console.config.disable_account
            = navigation_tab :account, :action => :show, :classes => ["account", "visible-phone"] do
              = _("My Account (")
              %span.username= current_user_id
              )
            - unless logout_path.nil?
              %li.visible-phone= link_to _("Sign Out"), logout_path, :class => "sign_out"
