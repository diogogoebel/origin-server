- content_for :title, 'Authentication'

%div.content
  %header.getup
    .wrap
      %h1.getup-sprite.logo Getup
      %h2.app Openshift Console

  %section
    %div.signin{ :id => 'signin' }
      %h2 Dashboard Authentication
      %form{:action => auth_path, :id => 'form-authentication', :method => 'post'}
        %fieldset
          = token_tag(nil)
          = email_field_tag 'login', '', :placeholder => "Login", :required => ''
          = password_field_tag 'password', '', :placeholder => "Password", :required => ''

          %button.getup-sprite Sign in
          = link_to "Forgot your password?", reset_path, :id =>  'forgot'

    = flashes

= javascript_include_tag 'auth'

