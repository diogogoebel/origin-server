- content_for :page_title, _('Create a Team')

%h1 Create a Team
= semantic_form_for @team, :simple => true do |f|
  %input{:type => "hidden", :name => "then", :value => @referrer }
  %input{:type => "hidden", :name => "team_param", :value => params[:team_param] }
  = f.semantic_errors
  = f.text_field :name, :autofocus => true, :placeholder => _('Team name')
  = f.buttons do
    = link_to _("Cancel"), @referrer || teams_path, :class => 'btn'
    = f.commit_button :label => _('Create')
    = f.loading
