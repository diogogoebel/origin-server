= content_for :title, t("getup.account.address.edit.title.#{@type.to_s}")
= breadcrumb_for_account t("getup.account.address.edit.title.#{@type.to_s}")
%h1= t "getup.account.address.edit.title.#{@type.to_s}"
= flashes

%form.form-horizontal.formtastic.form-address{:action => @action_path, :id => 'form-address', :method => 'post'}
  = token_tag(nil)
  %p= t("getup.account.address.edit.caption.#{@type.to_s}")

  - if @type == :billing
    %p
      .string.required.control-group
        %label.control-label= I18n.t(:use_contact_info)
        .controls
          = check_box_tag :is_billing, !@address[:is_billing], !@address[:is_billing]

  %fieldset.inputs
    .string.required.control-group
      %label.control-label= I18n.t(:Name)
      .controls
        = text_field_tag 'name', @address[:name], :placeholder => I18n.t(:Name), :class => 'input-xlarge'

    .string.required.control-group
      %label.control-label= I18n.t(:Email)
      .controls
        = text_field_tag 'email', @address[:email], :placeholder => I18n.t(:Email), :class => 'input-xlarge'

    .string.required.control-group
      %label.control-label= I18n.t(:Phone)
      .controls
        = phone_field_tag 'phone', @address[:phone], :placeholder => I18n.t(:Phone), :class => 'input-medium'

    .string.required.control-group
      %label.control-label= I18n.t(:Address)
      .controls
        = text_field_tag 'line1', @address[:line1], :placeholder => I18n.t(:Address), :class => 'input-xlarge'

    .string.required.control-group
      %label.control-label 
      .controls
        = text_field_tag 'line2', @address[:line2], :placeholder => I18n.t(:Address), :class => 'input-xlarge'

    .string.required.control-group
      %label.control-label= I18n.t(:City)
      .controls
        = text_field_tag 'city', @address[:city], :placeholder => I18n.t(:City), :class => 'input-xlarge'

    .string.required.control-group
      %label.control-label= I18n.t(:State)
      .controls
        = text_field_tag 'state', @address[:state], :placeholder => I18n.t(:State), :class => 'input-medium'

    .string.required.control-group
      %label.control-label= I18n.t(:Country)
      .controls
        = select_tag :country_code, options_for_select(country_list, @address[:country_code])

    .string.required.control-group
      %label.control-label= I18n.t(:Postal_code)
      .controls
        = text_field_tag 'postal_code', @address[:postal_code], :placeholder => I18n.t(:Postal_code), :class => 'input-small'

    .string.required.control-group.br-type-control.hidden
      %label.control-label Pessoa FÃ­sica
      .controls
        = radio_button_tag 'type', 'pf', @address[:type] == 'pf'

    .string.required.control-group.br-type-control.hidden
      %label.control-label CPF
      .controls
        = text_field_tag 'pf_cpf', @address[:pf_cpf], :placeholder => "CPF", :class => 'input-medium type-pf-control', :disabled => @address[:type] != 'pf'

    .string.required.control-group.br-type-control.hidden
      %label.control-label Pessoa JurÃ­dica
      .controls
        = radio_button_tag 'type', 'pj', @address[:type] == 'pj'

    .string.required.control-group.br-type-control.hidden
      %label.control-label CNPJ
      .controls
        = text_field_tag 'pj_cnpj', @address[:pj_cnpj], :placeholder => "CPNJ", :class => 'input-medium type-pj-control', :disabled => @address[:type] != 'pj'

    .string.required.control-group.br-type-control.hidden
      %label.control-label Insc. Est.
      .controls
        = text_field_tag 'pj_ie', @address[:pj_ie], :placeholder => "Insc. Estadual.", :class => 'input-medium type-pj-control', :disabled => @address[:type] != 'pj'

  %p
    %fieldset.form-actions
      = link_to I18n.t(:Cancel), account_path, :class => 'btn'
      %button.btn.btn-danger.update{:type => 'submit'}= I18n.t(:Save)
